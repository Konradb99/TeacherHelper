<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_one_class"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/lectureNameSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="1"
        android:fontFamily="@font/garamond"
        android:paddingTop="25dp"
        android:text="@string/LectureName"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:id="@+id/selectorLectureDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/button"
        android:orientation="horizontal"
        android:layout_weight="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lectureNameSelected"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="25dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/details"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/garamond"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_views_change_details"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"

            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/students"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/garamond"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayoutLecture"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectorLectureDetails"
        app:layout_constraintBottom_toTopOf="@id/buttonAddStudent"
        />

    <Button
        android:id="@+id/buttonAddStudent"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/addStudent"
        android:layout_gravity="center"
        android:background="@null"
        android:fontFamily="@font/garamond"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRemoveLecture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutLecture" />

    <Button
        android:id="@+id/buttonRemoveLecture"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/removeLecture"
        android:background="@null"
        android:layout_marginBottom="5dp"
        android:textSize="20sp"
        android:fontFamily="@font/garamond"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonAddStudent"
        app:layout_constraintBottom_toTopOf="@id/lectureDetailsLogo"/>


    <ImageView
        android:id="@+id/lectureDetailsLogo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>